{
    "compilerOptions": {
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "esModuleInterop": true,
      "module": "CommonJS",
      "moduleResolution": "node",
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "target": "ES6",
    },
    "exclude": [
      "node_modules"
    ],
    "include": [
      "**/*.ts",
      "**/*.tsx"
    ]
}
